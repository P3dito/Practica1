@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido a nuestra casa de cambio Online</h1>
</div>


@model ErrorViewModel.MonedaModel

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

<div class="container mt-5">
    <div class="card p-4 shadow">
        <h2 class="text-center mb-4">Conversor de Moneda</h2>
        <form asp-action="Convertir" method="post">
            <div class="mb-3">
                <label class="form-label">Enviar:</label>
                <input type="number" class="form-control" asp-for="MontoEnviado" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Moneda Origen:</label>
                <select class="form-select" asp-for="MonedaOrigen">
                    <option value="BRL">Real Brasileño</option>
                    <option value="USD">Dólar Americano</option>
                    <option value="PEN">Sol Peruano</option>
                </select>
            </div>
            <div class="mb-3">
                <label class="form-label">Moneda Destino:</label>
                <select class="form-select" asp-for="MonedaDestino">
                    <option value="PEN">Sol Peruano</option>
                    <option value="USD">Dólar Americano</option>
                    <option value="BRL">Real Brasileño</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary w-100">Hacer Cambio</button>
        </form>

    </div>
</div>
